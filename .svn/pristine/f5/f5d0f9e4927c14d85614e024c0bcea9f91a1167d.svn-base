.modalLoader
 {
    position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: none;
  /*opacity: .1;*/
  z-index: 2;
  display: none;
}
.dropdown-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  //background-color: rgba(0,0,0,0.7);
  z-index: 990;
}
.spinner {
  position: fixed;
  top: 50%;
  left: 50%;
  z-index:998;
  height: 50px;
  width: 50px;
  transform: translate(-50%, -50%);
}

[class^="ball-"] {
  position: absolute;
  display: block;
  left: 40px;
  width: 20px;
  height: 20px;
  border-radius: 10px;
  transition: all 0.5s;
  animation: circleRotate 4s both infinite;
  transform-origin: 0 200% 0;
}

@keyframes circleRotate {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(1440deg);
  }
}
.ball-1 {
  z-index: 999;
  background-color: #303f9f;
  animation-timing-function: cubic-bezier(0.5, 0.3, 0.9, 0.9);
}

